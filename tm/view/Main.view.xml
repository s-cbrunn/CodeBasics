<View controllerName="de.brunner.tm.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">

	
			
			
						<Page title="{i18n>headerPage}">
						
						<Toolbar>
								<SearchField id="idSearchField" width="100%" placeholder="{i18n>searchPlaceholder}" search="onSearch"/>
						</Toolbar>

							<IconTabBar id="idIconTabBar" select="onSearch" class="sapUiResponsiveContentPadding">
							<content>
								<Table id="idTableAll" inset="false" items="{path: '/data'}" growingThreshold="20" growing="true">
											<columns>
												<Column width="10%">
													<Text text="{i18n>cover}" />
												</Column>
												<Column>
													<Text text="{i18n>album}" />
												</Column>
												<Column>
													<Text text="{i18n>titel}" />
												</Column>
												<Column>
													<Text text="{i18n>artist}" />
												</Column>
												<Column width="10%">
													<Text text="{i18n>download}" />
												</Column>
												<Column>
													<Text text="{i18n>progress}" />
												</Column>
											</columns>
												<items>
													<ColumnListItem vAlign="Middle">
														<cells>
															<ObjectStatus icon="{album/cover_small}" />
															<Text text="{album/title}" />
															<Text text="{title}" />
															<Text text="{artist/name}" />
															<core:Icon src="sap-icon://download" press="onDownload" />
														<!-->	<ProgressIndicator percentValue="{progress}" displayValue="{progress}%" showValue="{enableProgress}" state="Success" enabled="false" class="sapUiSmallMarginBottom"/> -->
															<Text text="{progress}%" />
														</cells>
													</ColumnListItem>
												</items>
											</Table>
							</content>
									<items>
										
										<IconTabFilter icon="sap-icon://filter-facets"  text="{i18n>all}" key="allRecipes" /> 
										<IconTabSeparator />
										<IconTabFilter icon="sap-icon://attachment-audio" text="{i18n>albumList}" key="album" />    
										<IconTabFilter icon="sap-icon://list"  text="{i18n>playlistList}" key="playlist" />
										
									
									</items>
								</IconTabBar>
								
						</Page>

			


</View>


